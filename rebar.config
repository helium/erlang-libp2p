{cover_enabled, true}.
{cover_export_enabled, true}.
{coveralls_coverdata, "_build/test/cover/eunit.coverdata"}.
{coveralls_service_name, "travis-ci"}.

{deps, [
        {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {branch, "master"}}},
        {multiaddr, ".*", {git, "https://github.com/helium/erlang-multiaddr", {branch, "master"}}},
        {inert, ".*", {git, "https://github.com/msantos/inert", {branch, "master"}}},
        {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", {branch, "master"}}},
        {gpb, ".*", {git, "https://github.com/tomas-abrahamsson/gpb", {branch, "master"}}}
       ]}.

{erl_opts, [
            {parse_transform, lager_transform},
            {i, "./_build/default/plugins/gpb/include"},
            warn_untyped_records,
            debug_info,
            warnings_as_errors
           ]}.

{plugins, [rebar3_gpb_plugin, coveralls]}.
{provider_hooks, [
    {pre, [{compile, {protobuf, compile}},
           {clean, {protobuf, clean}}]}
]}.

{gpb_opts, [
            {i, "src"},
            {o_erl, "src"},
            {o_hrl, "src"},
            {msg_name_prefix, "libp2p_"},
            {msg_name_suffix, "_pb"},
            {module_name_suffix, "_pb"},
            {strings_as_binaries, false},
            type_specs
           ]}.

{shell, [
         {apps, [lager, ranch]}
        ]}.

{xref_checks,[undefined_function_calls,undefined_functions,locals_not_used,
    deprecated_function_calls, deprecated_functions]}.
